#################################
# Google Cloud Provider variables
#################################

project = "YOUR_PROJECT_STAGE"

#################################
# App variables
#################################

app_disk_image      = "YOUR_APP_IMAGE"
app_firewall_name   = "allow-puma-default"
app_firewall_ports  = ["9292"]
app_name            = "reddit-app"
app_public_key_path = "~/.ssh/appuser.pub"
app_tags            = ["reddit-app"]
app_username        = "appuser"

#################################
# DB variables
#################################

db_disk_image       = "YOUR_MONGODB_IMAGE"
db_firewall_name    = "allow-mongodb-default"
db_firewall_ports   = ["27017"]
db_name             = "reddit-db"
db_public_key_path  = "~/.ssh/appuser.pub"
db_source_tags      = ["reddit-app"]
db_tags             = ["reddit-app"]
db_username         = "appuser"

#################################
# Service accounts
#################################

# service account for ansible dynamic inventory
ansible_service_account_account_id    = "SERVICE_ACCOUNT_ID"
ansible_service_account_display_name  = "DISPLAY_NAME"
ansible_service_account_role          = "roles/compute.viewer"
ansible_service_account_key_path      = "ansible.json"
